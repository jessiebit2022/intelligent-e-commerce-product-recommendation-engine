# Intelligent E-commerce Product Recommendation Engine
# Environment Variables Template
# Author: Jessie Borras
# Website: jessiedev.xyz

# Copy this file to .env and update the values

# API Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001/api

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce_recommendations
MONGODB_TEST_URI=mongodb://localhost:27017/ecommerce_recommendations_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ML Service Configuration
ML_SERVICE_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_ML_SERVICE_URL=http://localhost:5000

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# External APIs (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# AWS Configuration (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-s3-bucket

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret

# Python ML Service
DEBUG=true
FLASK_ENV=development
PYTHONPATH=/app/src